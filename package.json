{
  "name": "@halo-dev/obsidian-halo",
  "private": true,
  "version": "1.0.0",
  "description": "Halo's Obsidian integration supports publishing content to Halo sites",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "lint": "eslint ./src --ext .js,.cjs,.mjs,.ts,.cts,.mts --ignore-path .gitignore",
    "prettier": "prettier --write './src/**/*.{js,ts,css,json,ml,yaml,html}'"
  },
  "author": "@halo-dev",
  "maintainers": [
    {
      "name": "Ryan Wang",
      "email": "i@ryanc.cc",
      "url": "https://github.com/ruibaby"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.8",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.18.6",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.18.16",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "obsidian": "latest",
    "prettier": "^3.0.3",
    "tslib": "2.6.0",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "@halo-dev/api-client": "^2.10.0",
    "gray-matter": "^4.0.3",
    "i18next": "^23.6.0",
    "js-yaml": "^4.1.0",
    "markdown-it": "^13.0.2",
    "transliteration": "^2.3.5"
  }
}
